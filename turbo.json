{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"],
			"env": [
				"DATABASE_URL",
				"BETTER_AUTH_SECRET",
				"BETTER_AUTH_URL",
				"CORS_ORIGIN",
				"NEXT_PUBLIC_APPWRITE_PROJECT_ID",
				"NEXT_PUBLIC_APPWRITE_PROJECT_NAME",
				"NEXT_PUBLIC_APPWRITE_ENDPOINT",
				"NEXT_PUBLIC_APPWRITE_TOKEN",
				"NEXT_PUBLIC_APPWRITE_DATABASE_PLAYERS",
				"NEXT_PUBLIC_APPWRITE_DATABASE_KILLS",
				"NEXT_PUBLIC_APPWRITE_COLLECTION_LISTPLAYER",
				"NEXT_PUBLIC_APPWRITE_COLLECTION_SERVERS",
				"NEXT_PUBLIC_APPWRITE_COLLECTION_PLAYERS",
				"NEXT_PUBLIC_APPWRITE_COLLECTION_STEAM_DATA",
				"NEXT_PUBLIC_APPWRITE_COLLECTION_STEAM_BANS",
				"NEXT_PUBLIC_APPWRITE_COLLECTION_STEAM_QUEUE",
				"NEXT_PUBLIC_APPWRITE_COLLECTION_PLAYER_VOTES",
				"NEXT_PUBLIC_APPWRITE_COLLECTION_KILLFEEDS"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
